{
    "project_metadata": {
        "name": "MTG Deck Builder - Triple Mode",
        "common_elements": [
            "login",
            "backend_api"
        ],
        "infrastructure_logic": {
            "setup_commands": [
                "mkdir -p dist/normal dist/non-accessible dist/non-usable",
                "cp -r src/* dist/normal/",
                "cp -r src/* dist/non-accessible/",
                "cp -r src/* dist/non-usable/"
            ],
            "routing_strategy": "El login debe leer el valor del botón seleccionado y redirigir mediante window.location.href = modes[selected].path"
        }
    },
    "modes": {
        "accessible_usable": {
            "id": "normal",
            "label": "Accesible y Usable",
            "path": "/dist/normal",
            "implementation_directives": "Aplicar mejores prácticas WCAG 2.1 y UX fluida. Todo debe ser operable por teclado y legible.",
            "settings": {
                "altTextEnabled": true,
                "keyboardNavigation": "full",
                "colorContrast": "high",
                "visualIndicators": [
                    "color",
                    "icons",
                    "text"
                ],
                "skipLinks": true,
                "keyboardZoom": true,
                "ariaLiveNotifications": true,
                "formLabels": true,
                "focusManagement": "strict",
                "responsiveLayout": "fluid",
                "searchFlexibility": "fuzzy",
                "smartFilters": [
                    "color_identity",
                    "mana_value"
                ],
                "interactiveCharts": true,
                "importFormat": "plain_text",
                "groupDuplicates": true,
                "autoSave": true
            }
        },
        "non_accessible": {
            "id": "a11y_fail",
            "label": "No Accesible",
            "path": "/dist/non-accessible",
            "implementation_directives": "Romper accesibilidad: eliminar ARIA, deshabilitar navegación por teclado, forzar bajo contraste y quitar etiquetas de formulario.",
            "settings": {
                "altTextEnabled": false,
                "keyboardNavigation": "mouse_only",
                "colorContrast": "low",
                "visualIndicators": [
                    "color_only"
                ],
                "skipLinks": false,
                "keyboardZoom": false,
                "ariaLiveNotifications": false,
                "formLabels": false,
                "focusManagement": "none",
                "responsiveLayout": "pixel_perfect_fixed",
                "searchFlexibility": "fuzzy",
                "smartFilters": [
                    "color_identity"
                ],
                "interactiveCharts": true,
                "importFormat": "plain_text",
                "groupDuplicates": true,
                "autoSave": true
            }
        },
        "non_usable": {
            "id": "ux_fail",
            "label": "No Usable",
            "path": "/dist/non-usable",
            "implementation_directives": "Romper UX: búsqueda por coincidencia exacta (fácil error), sin autoguardado, jerarquía visual confusa y carga de datos manual rígida.",
            "settings": {
                "altTextEnabled": true,
                "keyboardNavigation": "full",
                "colorContrast": "high",
                "visualIndicators": [
                    "color",
                    "icons",
                    "text"
                ],
                "skipLinks": true,
                "keyboardZoom": true,
                "ariaLiveNotifications": true,
                "formLabels": true,
                "focusManagement": "strict",
                "responsiveLayout": "desktop_only_scaled",
                "searchFlexibility": "exact_match_only",
                "smartFilters": [
                    "exact_color"
                ],
                "interactiveCharts": false,
                "importFormat": "proprietary_rigid",
                "groupDuplicates": false,
                "autoSave": false,
                "hiddenInfo": true,
                "confusingHierarchy": true
            }
        }
    }
}